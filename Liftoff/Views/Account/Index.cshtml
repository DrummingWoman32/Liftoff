@model Liftoff.ViewModels.LoginViewModel

@{
    <h1>Welcome to My Online Tracking Sheet, the online tracking sheet app for business consultants!</h1>
}

<br />
<h4>Please log in if you're ready to go out into the field :)</h4>
<br />

<!--<form asp-controller="Account" asp-action="AccountHomePage" method="post">-->
<form asp-controller="Account" asp-action="Index" method="post">

    <div class="form-group">
        <label asp-for="Username"></label>
        <input class="form-control" asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input class="form-control" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <div>
        <!--<label asp-for="LoginErrorMessage"></label>-->
        <!--not sure exactly how to type the line below in asp.net mvc, but let's use this for now-->
        <label class="field-validation-error">@Html.DisplayFor(model => model.LoginErrorMessage)</label>
    </div>

    <input type="submit" value="I'm ready!" />



    <br />
    <br />
    <p><a asp-controller="Account" asp-action="CreateAccount">New? Create an account!</a></p>
    <p><a asp-controller="Account" asp-action="ForgotPassword">Forgot password? We'll help you out here!</a></p>

</form>
